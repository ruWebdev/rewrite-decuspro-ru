[Unit]
Description=Python Rewriter Microservice for Deepseek API
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/decuspro/rewrite/python-rewriter
ExecStart=/var/www/decuspro/rewrite/python-rewriter/venv/bin/uvicorn main:app --host 127.0.0.1 --port 8765
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
